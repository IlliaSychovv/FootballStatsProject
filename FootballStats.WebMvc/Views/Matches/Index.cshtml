@model IEnumerable<FootballStats.Application.DTO.MatchDto>

<h2>Match Statistics</h2>

<form method="get">
    <label>Team:</label>
    <input type="text" name="teamName" value="@ViewContext.HttpContext.Request.Query["teamName"]" />

    <label>Start Date:</label>
    <input type="date" name="fromDate" value="@ViewContext.HttpContext.Request.Query["fromDate"]" />

    <label>End Date:</label>
    <input type="date" name="toDate" value="@ViewContext.HttpContext.Request.Query["toDate"]" />

    <button type="submit">Filter</button>
</form>

<table>
    <thead>
    <tr>
        <th>Date</th>
        <th>Team 1</th>
        <th>Team 2</th>
        <th>Score</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var match in Model)
        {
            <tr>
                <td>@match.Date.ToString("yyyy-MM-dd")</td>
                <td>@match.Team1</td>
                <td>@match.Team2</td>
                <td>@match.Score</td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4">No matches found.</td>
        </tr>
    }
    </tbody>
</table>