@model IEnumerable<FootballStats.Application.DTO.Match.MatchDto>

<div class="container mt-4">
    <h2 class="mb-4">Match Statistics</h2>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Team 1:</label>
                    <select name="teamName1" class="form-select">
                        <option value="">All Teams</option>
                        @if (ViewBag.TeamNames != null)
                        {
                            @foreach (var team in ViewBag.TeamNames)
                            {
                                var isSelected = team == ViewContext.HttpContext.Request.Query["teamName1"];
                                if (isSelected)
                                {
                                    <option value="@team" selected>@team</option>
                                }
                                else
                                {
                                    <option value="@team">@team</option>
                                }
                            }
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <label class="form-label">Team 2:</label>
                    <select name="teamName2" class="form-select">
                        <option value="">All Teams</option>
                        @if (ViewBag.TeamNames != null)
                        {
                            @foreach (var team in ViewBag.TeamNames)
                            {
                                var isSelected = team == ViewContext.HttpContext.Request.Query["teamName2"];
                                if (isSelected)
                                {
                                    <option value="@team" selected>@team</option>
                                }
                                else
                                {
                                    <option value="@team">@team</option>
                                }
                            }
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <label class="form-label">Start Date:</label>
                    <input type="date" name="fromDate" class="form-control" value="@ViewContext.HttpContext.Request.Query["fromDate"]" />
                </div>
                <div class="col-md-2">
                    <label class="form-label">End Date:</label>
                    <input type="date" name="toDate" class="form-control" value="@ViewContext.HttpContext.Request.Query["toDate"]" />
                </div>
                <div class="col-md-2 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary me-2">Filter</button>
                    <a href="@Url.Action("Index")" class="btn btn-secondary">Clear</a>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
            <tr>
                <th>Date</th>
                <th>Team 1</th>
                <th>Team 2</th>
                <th>Score</th>
            </tr>
            </thead>
            <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var match in Model)
                {
                    <tr>
                        <td>@match.Date.ToString("yyyy-MM-dd")</td>
                        <td>@match.Team1</td>
                        <td>@match.Team2</td>
                        <td><span class="badge bg-secondary">@match.Score</span></td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted py-4">
                        <i class="bi bi-info-circle"></i> No matches found.
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    @if (Model != null && Model.Any())
    {
        <div class="text-muted text-center">
            <small>Showing @Model.Count() matches</small>
        </div>
    }
</div>









